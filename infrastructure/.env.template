TWS_USERID=your_ibkr_username
TWS_PASSWORD=your_ibkr_password
TRADING_MODE=paper
# Bridge connects via socat on port 4004 inside the docker network.
IB_PORT=4004
BRIDGE_API_KEY=your_secure_random_api_key
IBKR_BRIDGE_API_KEY=your_secure_random_api_key
IBKR_EXECUTION_WEBHOOK_URL=https://us-central1-wheel-strat.cloudfunctions.net/ingestIbkrExecutions
IB_CONNECT_TIMEOUT=5
IB_HEALTH_CONNECT_TIMEOUT=2
IB_HEALTH_CACHE_TTL=2
IB_HEALTH_LOCK_TIMEOUT=0.25
IB_EXECUTIONS_TIMEOUT=12
IB_EXECUTIONS_LOCK_TIMEOUT=3
IB_EXECUTIONS_CACHE_TTL=30
# Optional: limit execution lookback (days) to reduce load; override per-request with ?lookbackDays=
# IB_EXECUTIONS_LOOKBACK_DAYS=7
IB_RECONNECT_INTERVAL=15
IB_RECONNECT_BACKOFF_MAX=120
IB_RECONNECT_LOCK_TIMEOUT=0.25
IB_HEARTBEAT_INTERVAL=30
IB_HEARTBEAT_TIMEOUT=2
IB_HEARTBEAT_FAILURES_BEFORE_EXIT=0
