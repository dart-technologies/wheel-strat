{
    "firestore": {
        "rules": "infrastructure/firestore.rules"
    },
    "functions": {
        "source": "functions",
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/reports/**",
                "function": "getMarketReport"
            }
        ]
    }
}